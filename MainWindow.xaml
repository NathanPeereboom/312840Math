<Window x:Class="_312840Math.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_312840Math"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBox x:Name="txtX" />
        <TextBox x:Name="txtY" />
        <StackPanel Orientation="Horizontal">
            <Button x:Name="btnAddInt" Click="btnAddInt_Click" Content="+" Width="100" />
            <Button x:Name="btnSubtractInt" Click="btnSubtractInt_Click" Content="-" Width="100" />
            <Button x:Name="btnMultiplyInt" Click="btnMultiplyInt_Click" Content="x" Width="100" />
            <Button x:Name="btnDivideInt" Click="btnDivideInt_Click" Content="/" Width="100" />
            <Button x:Name="btnModulusInt" Click="btnModulusInt_Click" Content="R" Width="100" />
        </StackPanel>
        <Label x:Name="lblOutput" />
    </StackPanel>
</Window>
